<div class="wrapper">
    <form id="signin-form" action="/signin" method="post">
      <h2>Sign In</h2>
      <div class="input-box">
        <input type="text" name="email" placeholder="Email" required>
        <i class='bx bxs-user'></i>
      </div>
      <div class="input-box">
        <input type="password" name="password" placeholder="Password" required>
        <i class='bx bxs-lock-alt'></i>
      </div>
      <br><br>
      <br>
      <div class="remmber-forgot">
        <label>
          <input type="checkbox"> Remember Me?
        </label>
        <a href="/reset">Forgot Password?</a>
      </div>
      <button type="submit" class="btn">Log In</button>
      <div id="error-message" style="display: none; color: red;"></div>
      <div class="register-link">
        <p>Don't have an account? <a href="/signup">Register</a></p>
      </div>
      <div class="signUpWith">
        <p>or login with:</p>
        <a href="/auth/facebook"><ion-icon name="logo-facebook"></ion-icon></a>
        <a href="/auth/microsoft"><ion-icon name="logo-microsoft"></ion-icon></a>
        <a href="/auth/google"><ion-icon name="logo-google"></ion-icon></a>
      </div>
    </form>
  </div>